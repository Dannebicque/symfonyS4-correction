{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <h1>Formulaire</h1>

    {% form_theme form 'mon-theme.html.twig' %}
    {# form_theme form 'mon-theme.html.twig' si je veux utiliser mon th√®me #}
    {{ form_start(form) }}

    <div class="row">
        <div class="col-6">
            {{ form_row(form.description) }}
            {{ form_row(form.quantiteDisponible) }}
            {{ form_row(form.fournisseur) }}
        </div>
        <div class="col-6">
            {{ form_row(form.designation) }}
            {{ form_row(form.prix) }}
        </div>
    </div>
    <div class="row">
        <h3>Tags</h3>
        <ul class="tags"
            data-index="{{ form.tags|length > 0 ? form.tags|last.vars.name + 1 : 0 }}"
            data-prototype="{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}"
        >
            {% for tag in form.tags %}
                <li>{{ form_row(tag.libelle) }}</li>
            {% endfor %}
        </ul>
        <button type="button" class="add_item_link" data-collection-holder-class="tags">Add a tag</button>
    </div>

    <button type="submit" class="btn btn-primary">Modifier</button>
    {{ form_end(form) }}
{% endblock %}

