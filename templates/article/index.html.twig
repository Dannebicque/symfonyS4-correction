{% extends 'base.html.twig' %}

{% block body %}
    <h1>Article</h1>
    {% for article in articles %}
        <div>
            <h2>{{ article.designation }}</h2>
            <p>{{ article.description }}</p>
            <ul>
                {% for tag in article.tags %}
                    <li>{{ tag.libelle }}</li>
                {% endfor %}
            </ul>
            <a href="{{ path('app_article_edit', {id:article.id}) }}">Modifier</a>
        </div>
    {% endfor %}
{% endblock %}

{% block title %}

{% endblock %}

